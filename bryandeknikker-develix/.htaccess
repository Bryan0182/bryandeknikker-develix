# Begin van het bestand
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redirect van www naar non-www
    RewriteCond %{HTTP_HOST} ^www\.develix\.nl [NC]
    RewriteRule ^(.*)$ https://develix.nl/$1 [L,R=301]

    # Zorg ervoor dat alles naar HTTPS wordt geforceerd
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://develix.nl/$1 [L,R=301]
</IfModule>

# Basis beveiligingsinstellingen
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Cache instellingen voor betere prestaties
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
    ExpiresByType text/html "access plus 1 week"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>
